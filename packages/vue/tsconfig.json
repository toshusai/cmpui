{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "declarationDir": "./types",

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "typeRoots": ["node_modules/@types", ".storybook/@types", "./node_modules"],
    "types": ["@vitest/browser/providers/playwright"]
  },
  "include": [
    "./src",
    "../core/src/RectGizmo/rotate.ts",
    "../core/src/RectGizmo/RectGizmoProps.ts",
    "../core/src/RectGizmo/edge.ts",
    "../core/src/RectGizmo/createStepped.ts",
    "../core/src/RectGizmo/corner.ts",
    "../core/src/RectGizmo/const.ts"
  ],
  "exclude": ["src/**/*.stories.ts", "node_modules", "types"]
}
